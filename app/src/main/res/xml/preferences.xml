<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Уведомления">

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_1"
            android:title="Присылать уведомления" />
        <ListPreference
            android:defaultValue="9"
            android:entries="@array/timeArray"
            android:entryValues="@array/timeArray"
            android:key="list_preference_1"
            android:title="Время отправки" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Внешний вид">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/themeArray"
            android:entryValues="@array/themeArray"
            android:key="list_preference_1"
            android:title="Тема" />
    </PreferenceCategory>
</PreferenceScreen>